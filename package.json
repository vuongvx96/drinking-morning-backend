{
  "name": "drinking-morning-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "node dist/main.js",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "cross-env NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "webpack": "rimraf dist && webpack --config webpack.config.js",
    "gen:schema": "ts-node src/generator/generate-typings.ts",
    "db:seed": "cross-env NODE_ENV=production ts-node src/dbseed.ts",
    "heroku-postbuild": "npm i --only=dev --no-shrinkwrap && npm run gen && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "eslint:check": "eslint './src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/graphql": "^7.8.2",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-cache-memcached": "^0.6.6",
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "cache-manager": "^3.4.0",
    "chai": "^4.2.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cron": "^1.8.2",
    "crypto-js": "^4.0.0",
    "dateformat": "^4.0.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.2.3",
    "graphql": "^15.4.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-rate-limit": "^2.0.1",
    "graphql-tools": "^7.0.2",
    "graphql-type-json": "^0.3.2",
    "graphql-upload": "^11.0.0",
    "graphql-voyager": "^1.0.0-rc.31",
    "handlebars": "^4.7.6",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.3",
    "nodemailer": "^6.4.16",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.28",
    "uuid": "^8.3.1",
    "webpack-bundle-analyzer": "^4.1.0",
    "winston": "^3.3.3",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.10",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-loader-helper": "^1.0.0",
    "webpack-node-externals": "^2.5.2",
    "webpack-notifier": "^1.10.1"
  },
  // "husky": {
  //   "hooks": {
  //     "pre-commit": "./node_modules/.bin/yarn eslint:check"
  //   }
  // },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
